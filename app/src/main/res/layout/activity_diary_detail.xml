<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/default_background"
              android:orientation="vertical">

    <RelativeLayout
            android:background="@drawable/toolbar_drawup_diary"
            android:layout_width="match_parent"
            android:layout_height="47dp">
        <TextView
                android:id="@+id/tv_diary_frag_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="#fff"
                android:text="날짜"
                android:layout_marginTop="15.7dp"
                android:textSize="18sp"
        />
    </RelativeLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="50dp">
                <ImageView
                        android:layout_weight="1"
                        android:id="@+id/img_diary_frag_good"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:background="#000000"
                        android:scaleType="centerInside"
                        android:layout_gravity="center"
                />
                <ImageView
                        android:layout_weight="1"
                        android:id="@+id/img_drawup_frag_soso"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:background="#000099"
                />
                <ImageView
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:id="@+id/img_drawup_frag_bad"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:background="#090671"
                />
            </LinearLayout>
            <ImageView

                    android:id="@+id/img_diary_frag_diary"
                    android:background="@drawable/background_diary"
                    android:layout_marginHorizontal="20dp"
                    android:src="@drawable/img_f"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="270dp"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    android:layout_height="270dp"/>
            <RelativeLayout
                    android:padding="27dp"
                    android:layout_marginHorizontal="28dp"
                    android:background="@drawable/background_comment"
                    android:layout_width="match_parent" android:layout_height="276dp">
                <TextView
                        android:id="@+id/txt_mom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="엄마 아빠 한마디"
                        android:textSize="20sp"
                        android:textColor="#655959"
                        android:textStyle="bold"
                />
                <ImageView
                        android:layout_marginTop="8dp"
                        android:layout_below="@+id/txt_mom"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/line_gr"
                />
                <TextView
                        android:layout_marginHorizontal="12dp"
                        android:layout_below="@+id/txt_mom"
                        android:layout_marginTop="10dp"
                        android:textColor="#ea8c7d"
                        android:id="@+id/txt_diary_frag_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="14dp"/>
            </RelativeLayout>
            <ImageView
                    android:src="@drawable/ma_sc"
                    android:id="@+id/img_arrow"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <RelativeLayout
                    android:elevation="3dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="40dp"
                    android:layout_height="112dp"
                    android:background="#ffffff"
                    android:layout_marginBottom="30dp"
                    android:id="@+id/rl_counselor_comment">
                <ImageView
                        android:id="@+id/img_selor"
                        android:src="@drawable/mask_img"
                        android:layout_marginLeft="68dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <RelativeLayout
                        android:gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/img_selor"
                        android:layout_width="wrap_content"
                                android:layout_height="match_parent">
                <TextView
                        android:text="서울상담소"
                        android:textColor="#707070"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:id="@+id/txt_diary_frag_conselor_organization"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                />
                <TextView
                        android:layout_below="@id/txt_diary_frag_conselor_organization"
                        android:text="이성민 상담사"
                        android:textColor="#707070"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:id="@+id/txt_diary_frag_counselor_name"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                />
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_toRightOf="@id/txt_diary_frag_counselor_name"
                           android:layout_below="@id/txt_diary_frag_conselor_organization"
                           android:src="@drawable/pencil"/>
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>