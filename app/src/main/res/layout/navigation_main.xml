<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="bottom"
              android:gravity="bottom"
              android:background="@color/colorPrimaryIvory">
    <LinearLayout
            android:id="@+id/navigation_category_diary"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
        <ImageView
                android:src="@mipmap/ic_launcher_round"
                android:layout_width="50dp" android:layout_height="50dp"
                android:layout_above="@id/text_diary"/>
        <TextView
                android:id="@+id/text_diary"
                android:text="일기장"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="14dp" android:textColor="#484848"
                android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/navigation_category_drawup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
        <ImageView
                android:src="@mipmap/ic_launcher_round"
                android:layout_width="50dp" android:layout_height="50dp"/>
        <TextView
                android:text="일기쓰기"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="14dp" android:textColor="#484848"
                android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/navigation_category_page"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
        <ImageView
                android:src="@mipmap/ic_launcher_round"
                android:layout_width="50dp" android:layout_height="50dp"/>
        <TextView
                android:text="마이페이지"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="14dp" android:textColor="#484848"
                android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>